@import "../../common/nav.wxss";
@import "../../../wxParse/wxParse.wxss";
.swiper-content{
  width: 710rpx;
  height: 400rpx;
  position: relative;
  margin: 0 auto;
  box-shadow:0 5rpx 15rpx 3rpx #ccc;
  overflow: hidden;
  border-radius: 10rpx;
}
.swiper-content image{
  width: 710rpx;
  display: block;
  height: 400rpx;
  position: relative;
  border-radius: 10rpx;
}
.dots{
  position: relative;
  padding-top: 26rpx;
  padding-bottom: 28rpx;
  width: 750rpx;
  /* display: flex; */
  font-size: 0;
  margin: 0 auto;
  text-align: center;
}
.dots .dot{
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: #ccc;
  margin: 0 16rpx;
  display: inline-block;
}
.dots .dot.active{
  background-color: #070707;
}
.case-list{
  border-top: 20rpx solid #ededed;
  padding: 48rpx 20rpx;
}
.case-list .img{
  width: 100%;
}
.case-list:first-child{
  border-top: none;
}
.case-list .function{
  padding-top: 10rpx;
  line-height: 100rpx;
  font-size: 38rpx;
}
.case-list .text{
  font-size: 20rpx;
  line-height: 1.6em;
}
.constitute{
  display: block;
  width: 92rpx;
  height: 92rpx;
  position: fixed;
  bottom: 264rpx;
  right: 20rpx;
  color: #FFF;
  font-size: 24rpx;
  text-align: center;
  line-height: 1.3em;
}
.constitute .text{
  margin-top: 15rpx;
}
.constitute image{
  position: absolute;
  left: 0;
  top: 0;
  width: 92rpx;
  height: 92rpx;
  z-index: -1;
}