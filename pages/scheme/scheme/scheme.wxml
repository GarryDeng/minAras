<!--轮播图start  -->
<swiper class='swiper-content' circular="{{circular}}" autoplay="{{autoplay}}"  bindchange="swiperChange" current="{{currentLength}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}" wx:key="{{item.id}}">
    <swiper-item >
      <image src="{{item.mobile_img}}" class="slide-image"/>
      <view class='click-details'>
        <view class='look-details' bindtap="goToNext" data-ids="{{item.id}}">查看详情</view>
      </view>
    </swiper-item>
  </block>
</swiper>
<view class='dots'>
  <block wx:for="{{imgUrls}}" wx:key="{{item.id}}">
    <view class='dot {{index == currentLength ? "active" : ""}}'></view>
  </block>
</view>