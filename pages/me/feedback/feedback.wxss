.nav{
  border-bottom: 1rpx solid #f5f5f5;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #FFF;
  width: 100%;
  z-index: 3;
}
.nav-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 710rpx;
  margin: 0 auto;
}
.nav-name{
  position: relative;
  line-height: 92rpx;
  font-size: 28rpx;
  bottom: -3rpx;
  border-bottom: 6rpx solid transparent;
}
.nav-name.active{
  border-bottom: 6rpx solid #12becb;
  font-weight: bold;
  box-sizing: border-box;
}
.nav-icon{
  width: 710rpx;
  height: 400rpx;
  position: relative;
  margin: 110rpx auto 0 auto;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 15rpx 15rpx #ccc;
}
.nav-icon .bg{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
}
.nav-icon .text{
  color: #FFF;
  width: 590rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 22rpx;
}
.submint-form{
  padding-top: 20rpx;
  width: 602rpx;
  margin: 0 auto;
}
.submint-form .title{
  line-height: 90rpx;
  font-size: 28rpx;
}
.form-item{
  padding-bottom: 56rpx;
}
.contacts{
  padding-top: 20rpx;
  position: relative;
  height: 84rpx;
  border-bottom: 1px solid #CCC;
}
.contacts .icon{
  position: absolute;
  left: 0;
  top: 43rpx;
  border-right: 1px solid #CCC;
  height: 38rpx;
  width: 58rpx;
}
.contacts .icon image{
  width: 38rpx;
  height: 38rpx;
  display: block;
  margin: 0 auto;
  opacity: .5;
}
.contacts input{
  box-sizing: border-box;
  line-height: 38rpx;
  padding: 23rpx 0 23rpx 79rpx;
  height: 84rpx;
  font-size: 28rpx;
}
.textarea-val{
  margin-top: 75rpx;
  position: relative;
  /* overflow: hidden; */
  width: 603rpx;
  height: 264rpx;
}
.placeholder-default{
  position: absolute;
  font-size: 20rpx;
  top: 20rpx;
  left: 20rpx;
  color: #CCC;
  z-index: -1;
}
.textarea-val textarea{
  border: 1rpx solid #CCC;
  width: 603rpx;
  height: 264rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 20rpx;
  resize: none;
}
.button-post{
  margin-top: 56rpx;
  width: 603rpx;
  height: 67rpx;
  line-height: 67rpx;
  text-align: center;
  position: relative;
  font-size: 28rpx;
  color: #FFF;
  margin-bottom: 44rpx;
  z-index: 999;
}
.button-post image{
  position: absolute;
  left: 0;
  width: 603rpx;
  height: 67rpx;
  top: 0;
  z-index: -1;
}