@import "../../common/nav.wxss";
.swiper-content{
  width: 710rpx;
  height: 400rpx;
  position: relative;
  margin: 0 auto;
  box-shadow: 0 15rpx 15rpx #ccc;
  overflow: hidden;
  border-radius: 10rpx;
}
.swiper-content image{
  width: 710rpx;
  display: block;
  height: 400rpx;
  position: relative;
}
.dots{
  position: relative;
  padding-top: 19rpx;
  padding-bottom: 6rpx;
  width: 750rpx;
  /* display: flex; */
  font-size: 0;
  margin: 0 auto;
  text-align: center;
}
.dots .dot{
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: #ccc;
  margin: 0 16rpx;
  display: inline-block;
}
.dots .dot.active{
  background-color: #070707;
}
.tank-title{
  line-height: 130rpx;
  font-size: 36rpx;
  padding-left: 32rpx;
}
.tank-title text{
  padding-left: 24rpx;
  position: relative;
}
