@import "../../common/nav.wxss";
.swiper-content{
  width: 710rpx;
  height: 400rpx;
  position: relative;
  margin: 0 auto;
  box-shadow: 0 15rpx 15rpx #ccc;
  overflow: hidden;
  border-radius: 10rpx;
}
.swiper-content image{
  width: 100%;
  height: 100%;
  display: block;
}
.wxParse-img{
  width: 100%;
}
.dots{
  position: relative;
  padding-top: 26rpx;
  padding-bottom: 40rpx;
  width: 710rpx;
  /* display: flex; */
  font-size: 0;
  margin: 0 auto;
  text-align: center;
  border-bottom: 1rpx solid #ededed;
}
.dots .dot{
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: #ccc;
  margin: 0 16rpx;
  display: inline-block;
}
.dots .dot.active{
  background-color: #070707;
}
/* 轮播图结束 */
.user-message{
  padding-bottom: 24rpx;
  border-bottom: 20rpx solid #ededed;
}
.user-message .banner{
  width: 710rpx;
  height: 400rpx;
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  border-radius: 12rpx;
  box-shadow: 0 15rpx 15rpx #ccc;
}
.user-message .banner image{
  /* width: 100%; */
  height: 400rpx;
  /* top: 50%;
  margin-top: -195rpx; */
  display: block;
  width: auto;
  /* position: absolute;
  left: 50%;
  transform: translateX(-50%); */
}
.user-message .name{
  line-height: 68rpx;
  text-align: center;
  padding-top: 30rpx;
  font-size: 30rpx;
}
.user-message .address{
  text-align: center;
  color: #b2b2b2;
  font-size: 18rpx;
  line-height: 32rpx;
}
.user-message .address image{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
  opacity: .5;
}
.user-message .position{
  font-size: 22rpx;
  text-align: center;
  line-height: 38rpx;
}
.details-label{
  line-height: 110rpx;
  height: 110rpx;
  padding: 0 20rpx;
}
.details-label .label{
  font-size: 30rpx;
  font-weight: bold;
  border-left: 7rpx solid #000;
  line-height: 30rpx;
  height: 30rpx;
  margin-top: 40rpx;
  padding-left: 20rpx;
}
.details-label .more{
  font-size: 18rpx;
  color: #999;
}
.details-city-list .label-list{
  display: flex;
  flex-wrap: wrap;
  margin: 0 20rpx;
  padding-bottom: 42rpx;
  border-bottom: 1rpx solid #ededed;
}
.details-city-list .label-list view{
  font-size: 22rpx;
  padding: 0 20rpx;
  line-height: 36rpx;
  border: 1rpx solid #1295d0;
  border-radius: 6rpx;
  margin-right: 36rpx;
  margin-bottom: 12rpx;
}
.details-city-list .introduce{
  width: 710rpx;
  margin: 0 auto;
  font-size: 22rpx;
  padding-bottom: 40rpx;
}
.details-city-list .line{
  border-bottom: 1rpx solid #ededed;
}
.punctuation-list,.list-content .slide{
  padding-left: 46rpx;
  width: 710rpx;
  box-sizing: border-box;
  margin: 0 auto;
  position: relative;
}
.list-content{
  width: 710rpx;
  margin: 0 auto;
  padding-bottom: 40rpx;
}
.punctuation-list::before,.list-content .slide::before{
  content: "";
  display: block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #000;
  position: absolute;
  left: 0;
  top: 21rpx;
}
.punctuation-list .time{
  font-size: 22rpx;
  line-height: 52rpx;
}
.list-content .slide{
  font-size: 22rpx;
  line-height: 38rpx;
  padding: 7rpx 0;
  padding-left: 46rpx;
}
.punctuation-list .content{
  font-size: 22rpx;
  padding-bottom: 12rpx;
}
.details-city-list .bottom-forty{
  padding-bottom: 40rpx;
  width: 710rpx;
  margin: 0 auto;
}